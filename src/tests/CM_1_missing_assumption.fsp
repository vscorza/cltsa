	when (eaten == 0) mouse_move[id][a] -> Act[a][eaten] |
	when ((eaten == 0)* ((a+1)  < Center)) mouse_move[id][a+1]  -> Act[a+1][eaten] |
	when ((eaten == 0)* ((a-1)  > Center)) mouse_move[id][a-1]  -> Act[a-1][eaten] |
